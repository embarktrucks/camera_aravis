<launch>
  <arg name="camera_name" default="cam_ids_gv"/>     
  <arg name="guid" default="IDS-4103231513" />
  <arg name="calibrated" default="0" />
  <arg name="frame_rate" default="30"/>

  <group ns="cam_ids_gv_aravis">
    <node pkg="camera_aravis" type="camera_node" name="cam_ids_gv_aravis" output="screen" >
      <param name="frame_id" value="$(arg camera_name)" />
      <param name="guid" type="str" value="$(arg guid)" />

      <!-- When unspecified, the driver will use the default framerate as given by the
           camera itself. Use this parameter to override that value for cameras capable of
           other framerates. -->

      <!-- param name="shutter_speed" value="0.0000001"/ -->
      <!-- param name="auto_shutter" value="0"/ -->

      <!-- param name="enable_trigger" value="False"/ -->
      <param name="frame_rate" value="$(arg frame_rate)"/>

      <!-- parameters to change it to master mode-->
      <!-- param name="enable_strobe1" value="True"/-->


      <!-- Use the camera_calibration package to create this file -->
      <param name="camera_info_url" if="$(arg calibrated)"
             value="file://$(env HOME)/.ros/camera_info/$(arg guid).yaml" />
    </node>

    <node pkg="image_proc" type="image_proc" name="image_proc_$(arg camera_name)"
          args="load image_proc camera_nodelet_manager" output="screen">
    </node>
  </group>
</launch>